<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.countdowntimer.CountDownTimerActivity">

    <Button
        android:id="@+id/count_down_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_50"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/count_down_time_cancel"
        android:background="@drawable/btn_style_set" />


    <Button
        android:id="@+id/count_down_time_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_50"
        android:textColor="@color/white"
        android:text="暂停计时"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/count_down_time_start"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_style_set" />

    <TextView
        android:id="@+id/count_down_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="倒计时剩余时间"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_60"
        app:layout_constraintTop_toBottomOf="@+id/count_down_time_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/count_down_time_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_50"
        android:textColor="@color/color_cbc77ed7"
        app:layout_constraintTop_toBottomOf="@+id/count_down_time_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>