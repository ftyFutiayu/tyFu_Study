<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity_launch_mode.LaunchModeActivity">

    <Button
        android:id="@+id/Button_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Standard"
        android:textAllCaps="false"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/Button_singleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Button_standard"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="SingleTop"
        android:textAllCaps="false"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/Button_singleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Button_singleTop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="SingleTask"
        android:textAllCaps="false"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/Button_singleInstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Button_singleTask"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="SingleInstance"
        android:textAllCaps="false"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/Button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Exit"
        android:textAllCaps="false"
        android:textSize="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>