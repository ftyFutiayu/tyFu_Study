<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragment.FragmentActivity">

    <Button
        android:id="@+id/fragment_test_lifecycle"
        android:layout_width="@dimen/dimen_600"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:text="@string/fragment_test_lifecycle"
        android:background="@drawable/btn_style_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dimen_20" />

    <TextView
        android:id="@+id/fragment_activity_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_demo1_intro"
        android:textSize="@dimen/dimen_50"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_test_lifecycle"
        android:layout_margin="@dimen/dimen_40"/>

    <Button
        android:id="@+id/fragment_test_demo1"
        android:layout_width="@dimen/dimen_600"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:text="@string/fragment_to_demo1"
        android:background="@drawable/btn_style_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_activity_textview1"
        android:layout_margin="@dimen/dimen_20" />

    <TextView
        android:id="@+id/fragment_activity_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_demo2_intro"
        android:textSize="@dimen/dimen_50"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_test_demo1"
        android:layout_margin="@dimen/dimen_40"/>

    <Button
        android:id="@+id/fragment_test_demo2"
        android:layout_width="@dimen/dimen_600"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:text="@string/fragment_to_demo2"
        android:background="@drawable/btn_style_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_activity_textview2"
        android:layout_margin="@dimen/dimen_20" />

</androidx.constraintlayout.widget.ConstraintLayout>