<?xml version="1.0" encoding="utf-8"?>
<!--Fragment_Demo1右侧另一个Fragment-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200">

    <TextView
        android:id="@+id/fragment_demo1_left_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_demo1_another_right"
        android:textSize="@dimen/dimen_50"
        android:textStyle="bold"
        android:layout_margin="@dimen/dimen_40"/>

    <Button
        android:id="@+id/fragment_demo1_right_button"
        android:layout_width="@dimen/dimen_600"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:text="@string/fragment_switch"
        android:background="@drawable/btn_style_set"
        android:layout_margin="@dimen/dimen_20" />
</LinearLayout>